<?xml version="1.0"?>
<odoo>
    <data>

        <record id="view_crm_lead_in_beta_inherit" model="ir.ui.view">
            <field name="name">crm.lead.in_beta.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="in_beta" invisible="1"/>
                </field>
            </field>
        </record>

          <record  model="ir.ui.view" id="crm_lead_inherit">
            <field name="name">crm.lead.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <button name="action_set_lost" position="after">
                    <button name="button_function" string="To Beta" type="object" class="btn-primary"  title="Send to beta"
                            attrs="{'invisible': ['|', ('stage_id', '!=', 4), ('in_beta', '=', True)]}"/>
                </button>
            </field>
        </record>
    </data>
</odoo>
